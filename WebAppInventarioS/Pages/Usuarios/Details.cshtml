@page
@model WebAppInventarioS.Pages.Usuarios.DetailsModel
@{
	ViewData["Title"] = "Detalles del Usuario";
}
<h1>Detalles del Usuario</h1>
@if (Model.Usuario != null)
{
	<dl class="row">
		<dt class="col-sm-2">Aceso de Usuario</dt>
		<dd class="col-sm-10">@Model.Usuario.UsuarioSesion</dd>
		<dt class="col-sm-2">Rol Usuario</dt>
		<dd class="col-sm-10">
			@{
				var departamento = Model.Roles.FirstOrDefault(d => d.Value == Model.Usuario.IdRol.ToString());
			}
			@(departamento != null ? departamento.Text : "No asignado")
		</dd>
		<dt class="col-sm-2">Status</dt>
		<dd class="col-sm-10">@Model.Usuario.Status</dd>
	</dl>
	<a asp-page="./Edit" asp-route-id="@Model.Usuario.IdUsuario" class="btn btn-primary">Editar</a>
	<a asp-page="./Index" class="btn btn-secondary">Regresar</a>
}
else
{
	<p>Usuario no encontrado. Verifique el ID proporcionado.</p>
	<a asp-page="./Index" class="btn btn-secondary">Regresar</a>
}

