@page
@model WebAppInventarioS.Pages.Roles.EditModel
@{
	ViewData["Title"] = "Edit Rol";
}
<form method="post">
    <input type="hidden" asp-for="Rol.IdRol" />
    <div class="form-group">
        <label asp-for="Rol.NombreRol"></label>
        <input asp-for="Rol.NombreRol" class="form-control" />
        <span asp-validation-for="Rol.NombreRol" class="text-danger"></span>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
